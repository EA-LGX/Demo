{
    "tasks": [
        {
            "type": "shell",
            "label": "QT_Qmake",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "command": "qmake",
            "args": [
                "../*.pro"
            ],
            "problemMatcher": []
        },
        {
            "label": "QT_构建Debug",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j16",
                "debug"
            ],
            "dependsOn": []
        },
        {
            "label": "QT_构建Release",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j16",
                "release"
            ],
            "dependsOn": []
        },
        {
            "label": "QT_清理",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "QT_运行",
            "options": {
                "cwd": "${workspaceFolder}\\build\\release"
            },
            "command": "${workspaceFolderBasename}.exe",
            "args": [
                ""
            ],
            "dependsOn": [
                "QT_构建Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "QT_打开QtCreator",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "D:\\Qt\\Qt5.12.11\\Tools\\QtCreator\\bin\\qtcreator.exe",
            "args": [
                "${workspaceFolderBasename}.pro"
            ],
            "problemMatcher": []
        },
        {
            "label": "QT_部署",
            "options": {
                "cwd": "${workspaceFolder}\\build\\release"
            },
            "command": "windeployqt",
            "args": [
                "${workspaceFolderBasename}.exe"
            ],
            "dependsOn": [
                "QT_清理",
                "QT_构建Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "QT_设计师",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "designer",
            "args": [
                "${file}"
            ],
            "dependsOn": [],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}