{
    "tasks": [
        {
            "type": "shell",
            "label": "qmake",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "command": "qmake",
            "args": [
                "../*.pro"
            ],
            "problemMatcher": []
        },
        {
            "label": "build-debug",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j16",
                "debug"
            ],
            "dependsOn": []
        },
        {
            "label": "build-release",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "-j16",
                "release"
            ],
            "dependsOn": []
        },
        {
            "label": "clean",
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "运行QT",
            "options": {
                "cwd": "${workspaceFolder}\\build\\release"
            },
            "command": "${workspaceFolderBasename}.exe",
            "args": [
                ""
            ],
            "dependsOn": [
                "build-release"
            ],
            "problemMatcher": []
        },
        {
            "label": "打开QtCreator",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "D:\\Qt\\Qt5.12.11\\Tools\\QtCreator\\bin\\qtcreator.exe",
            "args": [
                "${workspaceFolderBasename}.pro"
            ]
        },
        {
            "label": "部署QT",
            "options": {
                "cwd": "${workspaceFolder}\\build\\release"
            },
            "command": "windeployqt",
            "args": [
                "${workspaceFolderBasename}.exe"
            ],
            "dependsOn": [
                "clean",
                "build-release"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}